<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/White1"
                	  android:endColor="@color/Grey2"
                	  android:angle="315"
                	  />
            <stroke android:width="0dp"
                	android:color="@color/Grey2"
                	/>
            <corners android:radius="0dp"
                	 />
            <padding android:left="10dp"
                	 android:top="10dp"
                	 android:right="10dp"
                	 android:bottom="10dp"
                	 />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="@color/White1"
                	  android:endColor="@color/Grey1"
                	  android:angle="315"
                	  />
            <stroke android:width="0dp"
                	android:color="@color/Grey2"
                	/>
            <corners android:radius="0dp"
                	 />
            <padding android:left="10dp"
                	 android:top="10dp"
                	 android:right="10dp"
                	 android:bottom="10dp"
                	 />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/White2"
                	  android:endColor="@color/Grey1"
                	  android:angle="315"
                	  />
            <stroke android:width="0dp"
                	android:color="@color/Grey2"
                	/>
            <corners android:radius="0dp"
                	 />
            <padding android:left="10dp"
                	 android:top="10dp"
                	 android:right="10dp"
                	 android:bottom="10dp"
                	 />
        </shape>
    </item>
</selector>